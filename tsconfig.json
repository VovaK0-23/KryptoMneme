{
  "compilerOptions": {
    "target": "es6",
    "jsx": "react",

    "module": "es6",
    "moduleResolution": "node",
    "rootDir": "src",
    "baseUrl": "src",

    "strict": true,

    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,

    "noUnusedLocals": true,
    "noEmit": true,

    "skipLibCheck": true,

    "plugins": [{ "name": "typescript-plugin-css-modules" }],

    "paths": {
      "@/*": ["*"]
    }
  }
}
