{
  "compilerOptions": {
    "target": "es6",
    "jsx": "react",

    "module": "es6",
    "rootDir": "src",
    "baseUrl": "src",

    "strict": true,

    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,

    "noEmit": true,

    "skipLibCheck": true,

    "paths": {
      "@/*": ["*"]
    }
  }
}
